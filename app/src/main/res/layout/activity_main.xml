<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">
<GridLayout
    android:columnCount="3"
    android:rowCount="2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnFragment"
        android:text="Area of Circle"

        android:background="#C0392B"
        android:layout_margin="5dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSimpleInterest"
        android:text="Simple Intrest"
        android:background="#3498DB "
        android:layout_width="115dp"
        android:layout_margin="13dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnPalindrome"
        android:text="Palindrome"
        android:background="#F39C12"
        android:layout_width="89dp"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnAuto"
        android:text="Automorphic"
        android:background="#1E8449"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnArmstrong"
        android:text="Armstrong"
        android:layout_marginLeft="20dp"
        android:background="#283747"
        android:layout_margin="5dp"
        android:layout_width="102dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSwapping"
        android:text="Swapping"
        android:background="#76448A"
        android:layout_width="85dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>
</GridLayout>

    <LinearLayout
        android:background="#839192"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/fragmentContainer"
        android:layout_height="400dp"

        ></LinearLayout>
</LinearLayout>